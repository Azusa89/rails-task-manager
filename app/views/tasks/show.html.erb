<div class="page">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <div class="options">
    <p><%= link_to "edit", edit_task_path(@task) %></p>
    <p><%= link_to "delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" } %></p>
    <p><%= link_to "Back to list", tasks_path %></p>
  </div>
</div>
